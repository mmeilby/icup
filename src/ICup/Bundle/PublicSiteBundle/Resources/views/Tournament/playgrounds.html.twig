{% extends "ICupPublicSiteBundle:Masters:standard.html.twig" %}
{% trans_default_domain "tournament" %}

{% import 'ICupPublicSiteBundle:Masters:tournament.html.twig' as tformatter %}

{% block widebody %}
{{ tformatter.title(tournament) }}
{% endblock %}

{% block body %}
<p class="lead">
    {% trans %}PLAYGROUNDS{% endtrans %}
</p>
{% if playgrounds|length > 0 %}
<div class="row">
    {% for site in playgrounds|keys %}
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading"><b>{{ site }}</b></div>
            <div class="list-group">
        {% for id,name in playgrounds[site] %}
                <a class="list-group-item" href="{{ path('_showplayground_full', { 'playgroundid': id }) }}">
                    <p class="list-group-item-text">{{ name }}</p>
                </a>
        {% endfor %}
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% else %}
    <div class="list-group">
        <div class="list-group-item">
            <i class="fa fa-child fa-5x text-primary"></i>
            <h2>{% trans %}FORM.TEASER.TOURNAMENT.NOPLAN.TITLE{% endtrans %}</h2>
            {% trans %}FORM.TEASER.TOURNAMENT.NOPLAN.DESC{% endtrans %}
        </div>
    </div>
{% endif %}
{% endblock %}